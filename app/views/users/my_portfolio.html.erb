<h1>My Portfolio</h1>

<div class="search-area pt-50">
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 px-0">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 px-0">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= bootstrap_icon "search", width: 35, height: 35 %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @stock %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><strong>Symbol: </strong><%= @stock.ticker.upcase %></h5>
      <h5 class="card-title"><strong>Name: </strong><%= @stock.name %></h5>
      <h5 class="card-title"><strong>Price: </strong><%= @stock.last_price %></h5>
    </div>
  </div>
<% end %>